  navi a {
    text-decoration: none;
    font-family: bignoodletitling;
    letter-spacing: 4px;
    font-size: 20px;
    margin: 0 10px;
    color: #fff;
  }

  navi a:hover {
    text-align: center;
    color: #57a2ce;
    border-radius: 2px;
    position: relative;
    box-shadow: 2px 2px 20px rgba(136, 160, 211, 0.514);
  }

  banner-area {
    width: 100px;
    height: 150px;
    /* position: fixed; */
    top: 100px;
    background-image: url(123.jpg);
    -webkit-background-size: cover;
    background-size: cover;
    background-position: center center;
    display: inline-flex;
    border: 10px solid #111;
    border-image: url(123.jpg) 30 round;
  }

  .banner-area h2 {
    padding-top: 10%;
    padding-bottom: 8%;
    font-family: 'Poppins', sans-serif;
    text-transform: uppercase;
    font-size: 90px;
    line-height: 160px;
    margin-left: -10px;
    color: transparent;
    -webkit-text-stroke: 1px rgb(4, 50, 102);
    background: url(anim.jpg);
    -webkit-background-clip: text;
    background-position: 0 0;
    animation: anim 20s linear infinite;
    font-weight: 400;
  }

  @keyframes anim {
    100% {
      background-position: 2000px 0;

    }
  }

  #block {
    float: center;
    line-height: 100px;
    background-color: transparent;

  }

  #block navi {
    width: 100%;
    height: 90px;
    background-size: cover;
    background-position: center center;
    background-color: rgba(5, 71, 35, 0.623);

  }

  #block navi a {
    text-decoration: none;
    font-family: bignoodletitling;
    letter-spacing: 5px;
    font-size: 20px;
    margin: 0 10px auto;
    color: rgb(214, 234, 235);
  }

  #block navi a:hover {
    text-align: center;
    color: #22e02b;
    border-radius: 2px;
    position: relative;
    box-shadow: 2px 2px 20px rgba(99, 224, 162, 0.479);
