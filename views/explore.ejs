  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap');

  body {
    display: block;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .cont {
    position: relative;
    width: 1100px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    padding: 30px;
    margin-left: 120px;
  }

  .cont .card {
    position: relative;
    max-width: 300px;
    height: 300px;
    margin: 30px 10px;
    padding: 20px 15px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 5px 202px rgba(0, 0, 0, 0.5);
    transition: 0.3s ease-in-out;

  }

  .cont .card:hover {
    height: 520px;
  }

  .cont .card .imgBx {
    position: relative;
    width: 150px;
    height: 200px;
    top: -60px;
    left: 20%;
    z-index: 1;
    box-shadow: 0 5px 202px rgba(0, 0, 0, 0.5);

  }

  .cont .card .imgBx img {
    max-width: 100%;
    border-radius: 4px;
  }

  .cont .card .content {
    position: relative;
    margin-top: -140px;
    padding: 10px 15px;
    text-align: center;
    color: #111;
    visibility: hidden;
    opacity: 0;
    transition: 0.3s ease-in-out;
  }

  .cont .card:hover .content {
    visibility: visible;
    opacity: 1;
    margin-top: -40px;
    transition-delay: 0.3s;

  }

  .wrapper {
    width: 1170px;
    margin: 0 auto;
  }

  header {
    height: 100px;
    background: #38044d;
    width: 100%;
    z-index: 12;
    position: fixed;
  }

  .logo {
    width: 30%;
    float: left;
    line-height: 100px;
  }

  .logo a {
    text-decoration: none;
    font-size: 30px;
    font-family: bignoodletitling;
    color: #fff;
    letter-spacing: 5px;
  }

  /* nav {
    float: right;
