    .accordion{
        width: 800px;
       margin-top: 50px;
       margin-bottom: 50px;
        
    }
    .accordion .contentBx{
        position: relative;
        margin: 10px 20px;
    }
    .accordion .contentBx .label{
        position: relative;
        padding: 30px;
        background: #18b1648a;
        color: #fff;
        cursor: pointer;
        font-size: 2.0rem;
        width: 950px;
        left: 150px;
        
       
    }
    .accordion .contentBx .label::before{
        content: '+';
        position: absolute;
        top: 50%;
        right: 20px;
        transform: translateY(-50%);
        font-size: 2.0em;
    }
    .accordion .contentBx.active .label::before{
        content: '-';
    }
    .accordion .contentBx .content{
        position: relative;
       /** padding: 10px;**/
        background: rgba(255, 255, 255, 0.527);
        height: 0;
        overflow: hidden;
        transition: 0.5s;
        overflow-y: auto;
        font-size: 1.5rem;
        width: 945px;
        left: 150px; 
    }
    .accordion .contentBx.active .content{
        height: 150px;
        padding: 10px;
    }
    
</style>

